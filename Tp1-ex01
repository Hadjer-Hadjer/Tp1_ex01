
#include <stdio.h>

int main() {
    char matrix[n][m] = {
        {'1', '2', '3', '4', '5'},
        {'7', 'a', 'c', '8', 'd'},
        {'c', '9', '4', 'z', '8'},
        {'5', '6', 'p', 'n', '3'},
        {'2', '9', 't', 'm', 'k'},
    };

    // السؤال 1.1
    printf("matrice[n][m]:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            printf("%c ", matrix[i][j]);
        }
        printf("\n");
    }

    printf("\n Rows with even indices :\n");
    for (int i = 0; i < 5; i += 2) {
        for (int j = 0; j < 5; j++) {
            printf("%c ", matrix[i][j]);
        }
        printf("\n");
    }

    printf("\n odd-indexed elements in each row :\n");
    for (int i = 0; i < 5; i++) {
        for (int j = 1; j < 5; j += 2) {
            printf("%c ", matrix[i][j]);
        }
        printf("\n");
    }

    // السؤال 1.2
    printf("\nالقطر الرئيسي:\n");
    for (int i = 0; i < 5; i++) {
        printf("%c ", matrix[i][i]);
    }
    printf("\nالقطر الثانوي:\n");
    for (int i = 0; i < 5; i++) {
        printf("%c ", matrix[i][m - i - 1]);
    }

    return 0;
